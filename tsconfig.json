{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "Node16",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Node16",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "shared/interfaces/icartItem.ts", "src/services/api/api.ts", "shared/slices", "shared/store.tsx", "src/pages/CardPage.tsx", "src/App.tsx", "src/widgets/Card.tsx", "src/pages/root/vite-env.d.ts", "src/widgets/CardInDrawer.tsx", "src/features/RangeInput.tsx", "src/entities/CartDrawer.tsx", "src/entities/OptionsDrawer.tsx", "src/entities/Header.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
